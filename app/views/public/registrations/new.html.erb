<!-- customer/registration/new 新規登録ページ -->

<div class="container">
  <div class="row">
    <h4 class="col-md-3 text-center bg-light my-4">新規会員登録</h4>
  </div>

  <div class="row">
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>名前</th>
            <td>
              <label>(姓)</label><%= f.text_field :last_name, autofocus: true, class: 'ml-3 mr-5' %>
              <label>(名)</label><%= f.text_field :first_name, class: 'ml-3' %>
            </td>
          </tr>

          <tr>
            <th>フリガナ</th>
            <td>
              <label>(セイ)</label><%= f.text_field :last_name_kana, class: 'mr-5' %>
              <label>(メイ)</label><%= f.text_field :first_name_kana %>
            </td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autocomplete: "email", class: 'ml-5' %></td>
          </tr>

          <tr>
            <th>郵便番号（ハイフンなし）</th>
            <td><%= f.number_field :postal_code, class: 'ml-5' %></td>
          </tr>

          <tr>
            <th>パスワード（6文字以上）</th>
            <td><%= f.password_field :password, autocomplete: "new-password", class: 'ml-5' %></td>
          </tr>

          <tr>
            <th>パスワード（確認用）</th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'ml-5' %></td>
          </tr>

          <tr>
            <div class="actions">
              <th></th>
              <td><%= f.submit "新規登録", class: 'btn btn-success col-md-4 ml-5 mt-3' %></td>
            </div>
          </tr>

        </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <h4 class="col-md-6 text-center bg-light my-4">既に登録済の方</h4>
      <p class="ml-5"><%= link_to "こちら", new_customer_session_path %> からログインしてください</p>
    </div>

    <%= render "public/shared/error_messages", resource: resource %>
  </div>
</div>
