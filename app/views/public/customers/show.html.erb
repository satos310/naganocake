<h2>マイページ</h2>

<div>
  <div>
    <h3>登録情報</h3>
    <%= link_to "編集する", customer_path(@customer.id) %>
  </div>

  <table>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><span>　</span></%><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><span>　</span></%><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>

  <table>
    </tr>
      <th>配送先</th>
      <td><%= link_to "一覧を見る", addresses_path(@customer.id) %></td>
    </tr>
    </tr>
      <th>注文履歴</th>
      <td><%= link_to "一覧を見る", orders_path(@customer.id) %></td>
    </tr>
  </table>
</div>