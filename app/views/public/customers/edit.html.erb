<h3>会員情報編集</h3>

<div class="container">
  <div class="row">
    <div>
      <!-- controller未記述now 2023/04/13 -->
      <%= form_with model: @customer do |f| %>
        <table class="field">
          <tr>
            <th>名前</th>
            <td><label>(姓)</label><%= f.text_field :last_name, autofocus: true %></td>
            <td><label>(名)</label><%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <th>フリガナ</th>
            <td><label>(セイ)</label><%= f.text_field :last_name_kana %></td>
            <td><label>(メイ)</label><%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <th>郵便番号（ハイフンなし）</th>
            <td><%= f.number_field :postal_code %></td>
          </tr>

          </tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>

          </tr>
            <th>電話番号</th>
            <td><%= f.number_field :telephone_number %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>

          <div class="actions">
            <td><%= f.submit "編集内容を保存" %></td>
            <!-- ↓ unsubscribeのidが見つからない？ ↓ -->
            <td><%= link_to "退会する", customers_unsubscribe_path %></td>
          </div>
        </table>
      <% end %>
    </div>
  </div>
</div>
