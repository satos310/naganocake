<div class="container">
  <div class="row">
    <h3 class="col-md-4 text-center bg-light my-4">
      商品一覧
      <span>（全</span><%= @items.total_count %><span>件）</span>
    </h3>
  </div>

  <div class="row">
    <div class="col-md-10 offset-md-1 mb-3">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 px-5">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_item_image(100,100) %><br>
              <%= item.name %><br>
              <span>￥</span><%= item.price %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto d-flex justify-content-center">
      <%= paginate @items %>
    </div>
  </div>

</div>
