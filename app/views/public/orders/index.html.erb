<!-- customer/orders/index 注文履歴一覧ページ -->
<div>
  <h2>注文履歴一覧</h2>
</div>

<div>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @order_details.each do |order_detail| %>
          <td><%= order_detail.created_at %></td>
          <td><%= order_detail.name %></td>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price_tax %></td>
          <td><%= order_detail.making_status %></td>
          <td><%= link_to "表示する", order_path(order_detail.order_id) %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
