<h2>注文履歴詳細</h2>

<div class="container">
  <div class="row">
    <div>
      <p>注文情報</p>
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>

    <div>
      <p>請求情報</p>
      <table>
        <tr>
          <th>商品合計</th>
          <!-- 「注文内容」の価格の合計を表示させたい -->
          <td><%= @order.total_payment - 800 %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <p>注文内容</p>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_tax %></td>
            <td><%= order_detail.quantity %></td>
            <!-- cart_item/indexでは単価*小計＝subtotalで表示 -->
            <td><%= order_detail.subtotal %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>