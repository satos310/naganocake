<!-- customer/cart_item/indexページ -->

<div class="container">
  <div class="row">
    <div>
      <h2>ショッピングカート</h2>
      <%= link_to "カートを空にする", destroy_all_cart_items_path(current_customer), method: :delete %>
    </div>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <!-- to_i => 返り値エラー回避（確実にinteger型に変換） -->
            <% @total += cart_item.subtotal.to_i %>
            <td><%= link_to "削除する", cart_item_path(current_customer), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div>
      <%= link_to "買い物を続ける", homes_top_path %>
    </div>

    <table>
      <th>合計金額</th>
      <td><%= @total.to_i %></td>
    </table>
  </div>

  <div class="row">
    <%= link_to "情報入力に進む", new_order_path %>
  </div>
</div>
