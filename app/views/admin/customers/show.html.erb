<!-- admin/customer/showページ -->
<h2><span><%= @customer.first_name %></span><span><%= @customer.last_name %></span>会員詳細</h2>

<div class="container">
  <div class="row">
    <div>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><span> </span><%= @customer.first_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><span> </span><%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td><%= customer_status_name(@customer)? '有効' : '退会中' %></td>
        </tr>

      </table>
    </div>

    <div>
      <div>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
      </div>
      <div>
        <%= link_to "注文一覧に戻る", admin_homes_top_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>

  </div>
</div>
