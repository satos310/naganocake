<!-- admin/sessions 管理者ログインページ -->
<div class="container">
  <div class="row">
    <div class="my-4">
      <h3 class="bg-light">管理者ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-8 col-md-offset-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "メールアドレス", class: 'col-md-4' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email,", class: 'col-md-7' %>
        </div>

        <div class="field">
          <%= f.label "パスワード", class: 'col-md-4' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-md-7 mb-4' %>
        </div>

        <!--<%# if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%#= f.check_box :remember_me %>-->
        <!--    <%#= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<%# end %>-->

        <div class="col-md-3 mx-auto text-center actions">
          <%= f.submit "ログイン", class: 'btn-primary' %>
        </div>
      <% end %>
    </div>

  </div>
</div>

<%= render "admin/shared/links" %>