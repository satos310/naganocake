<!-- admin/item 商品一覧ページ -->
<div>
  <h1>商品一覧</h1>
  <%= link_to new_admin_item_path do %>
    <i class="fas fa-plus-circle fa-lg"></i>
  <% end %>
</div>

<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <!-- ここで商品を呼び出す -->
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item_status_name(item) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
