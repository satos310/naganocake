<!-- admin/homes/top 注文履歴一覧ページ（adminトップページ） -->
<div>
  <h2>注文履歴一覧</h2>
</div>

<div>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <!--<th>注文ステータス</th>-->
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.name %></td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
