<!-- admin/homes/top 注文履歴一覧ページ（adminトップページ） -->
<div>
  <h2>注文履歴一覧</h2>
</div>

<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <!--<th>注文ステータス</th>-->
      </tr>
    </thead>

    <tbody>
      <% (@orders,@order_items).each do |order order_item| %>
        <tr>
          <td><%= order.crated_at %></td>
          <td><%= order.name %></td>
          <td><%= order_item.quantity %></td>
          <!--<td>< = order_status_name(order) %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
