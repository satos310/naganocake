<!-- admin/homes/top 注文履歴一覧ページ（adminトップページ） -->
<div class="container">
  <div class="row">
    <h3 class="bg-light my-4">注文履歴一覧</h3>
  </div>

  <div class="row">
    <table class="table table-hover table-inverse">
      <thead class="table-active">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <!--<th>注文ステータス</th>-->
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to  %>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <!--<td><%#= order.status_i18n %></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto d-flex justify-content-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>
